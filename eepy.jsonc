{
    "shell": {
        "windows": {
            "executable": "pwsh.exe",
            "args": [
                "-c"
            ]
        }
    },
    "commands": {
        "run": {
            "description": "run odin project",
            "cmd": [
                "odin run ./src/main.odin -file"
            ]
        },
        
        "build": {
            "description": "build odin project",
            "cmd": [
                "rm -r build/* &&",
                "odin build ./src/main.odin -file &&",
                "mv ./main.exe ./build/cgen.exe"
            ]
        },
        "clean": {
            "description": "clean build folder",
            "cmd": [
                "rm -r build/*"
            ]
        }
    }
}
